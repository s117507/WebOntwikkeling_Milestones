<!DOCTYPE html>
<html lang="en">
  <%- include("partials/header") %>
  <body>
    <section>
      <h1>Update Card: <%= card.name %></h1>
      <div class="form-container">
        <form action="/form/<%= card.name %>/update" method="POST">
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" value="<%= card.name %>" required>
          
          <label for="description">Description:</label>
          <textarea id="description" name="description" rows="4" required><%= card.description %></textarea>
          
          <label for="rating">Rating:</label>
          <input type="text" id="rating" name="rating" value="<%= card.rating %>" required>
          
          <label for="type">Type:</label>
          <input type="text" id="type" name="type" value="<%= card.type %>" required>
          
          <button type="submit">Update Card</button>
        </form>
      </div>
    </section>
  </body>
</html>
